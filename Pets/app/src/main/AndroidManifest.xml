<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="study.pmoreira.pets">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.catalog.CatalogActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.editor.EditorActivity"
            android:label="@string/editor_activity_title_new_pet"
            android:parentActivityName=".ui.catalog.CatalogActivity"
            android:theme="@style/EditorTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.catalog.CatalogActivity"/>
        </activity>
        <provider
            android:name=".data.PetProvider"
            android:authorities="study.pmoreira.pets"
            android:exported="false" />
    </application>

</manifest>